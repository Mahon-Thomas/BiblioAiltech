<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#FFF"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            >

            <TextView
                android:id="@+id/textId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:text="1"
                android:textColor="#000"
                android:textSize="28dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.181" />

            <TextView
                android:id="@+id/textTitre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:text="Titre "
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#000"
                app:layout_constraintStart_toEndOf="@+id/textId"
                app:layout_constraintTop_toTopOf="@+id/textId" />

            <TextView
                android:id="@+id/textAuteur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="16dp"
                android:textColor="#000"
                android:text="Auteur"
                app:layout_constraintStart_toStartOf="@+id/textTitre"
                app:layout_constraintTop_toBottomOf="@+id/textTitre" />

            <TextView
                android:id="@+id/textGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Genre"
                android:textColor="#000"
                app:layout_constraintStart_toStartOf="@+id/textAuteur"
                app:layout_constraintTop_toBottomOf="@+id/textAuteur" />

            <TextView
                android:id="@+id/textDisponibilite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disponibilite"
                android:textStyle="bold"
                android:textColor="#000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>